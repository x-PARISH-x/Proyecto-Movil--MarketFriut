<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardMaxElevation="15dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/producto_imagen"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/producto_nombre"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/producto_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_imagen"
            android:textAlignment="center"
            android:textSize="16dp"
            android:text="Descripcion del Producto"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/producto_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_descripcion"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:textSize="17dp"
            android:text="Cantidad: 000"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/producto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/producto_descripcion"
            android:layout_toEndOf="@+id/producto_cantidad"
            android:textAlignment="center"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:text="Precio"
            android:textColor="#D835EA"/>
        
        
    </RelativeLayout>



</androidx.cardview.widget.CardView>